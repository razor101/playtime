@model PlayTime.Web.Models.Project.ProjectCreateOrUpdateModel

@using (Html.BeginForm("Create", "Project", FormMethod.Post))
{
    if (Model.MatchingCustomer != null)
    {
        <h1>Create project for @Model.MatchingCustomer.Name</h1>

        @Html.HiddenFor(x => x.CustomerId)
    }
    else
    {
        <h1>Create project</h1>

        <div>
            @Html.LabelFor(x => x.CustomerId)
            @Html.DropDownListFor(x => x.CustomerId, Model.Customers)
        </div>
    }
    
    <div>
        @Html.LabelFor(x => x.Name)
        @Html.EditorFor(x => x.Name)
    </div>

    <div>
        @Html.LabelFor(x => x.IsFixed)
        @Html.EditorFor(x => x.IsFixed)
    </div>

    <div>
        @Html.LabelFor(x => x.Price)
        @Html.EditorFor(x => x.Price)
    </div>

    <div>
        @Html.LabelFor(x => x.StartDate)
        @Html.EditorFor(x => x.StartDate)
    </div>

    <div>
        @Html.LabelFor(x => x.EndDate)
        @Html.EditorFor(x => x.EndDate)
    </div>

    if (Model.MatchingCustomer == null)
    {
        <div>
            @Html.LabelFor(x => x.CustomerId)
            @Html.DropDownListFor(x => x.CustomerId, Model.Customers)
        </div>
    }
    
    <input type="submit" value="Create" />
}